@model ICreative.Controllers.ViewModels.Datatable.RestrictionTableViewModel
@{
    ViewBag.Title = "Restriction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section plugin_css {
    <link href="~/Content/css/datapicker/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/Plugins/dataTables/datatables.min.css" rel="stylesheet" type="text/css">
    <style>
        .datepicker {
            z-index: 2600 !important; // has to be larger than 1050 
        }
        .modal-dialog{
            max-width: 50%;
        }
    </style>
}

@section plugin_scripts {
    <script src="~/Content/js/plugins/forms/validation/validate.min.js"></script>
    <script src="~/Content/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/Content/js/plugins/tables/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/Content/js/plugins/datapicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/js/plugins/notifications/bootbox.min.js"></script>
    <script src="~/Content/js/Pages/Datatables/RestrictionTable.js"></script>
}

<div class="ibox ">
    <div class="ibox-title">
        <h5>Basic Data Tables example with responsive plugin</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="#" class="dropdown-item">Config option 1</a>
                </li>
                <li>
                    <a href="#" class="dropdown-item">Config option 2</a>
                </li>
            </ul>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <div class="table-responsive">
            <table id="mainTable" class="table table-bordered table-hover datatable-highlight dataTable no-footer" style="width:100%">
                <thead>
                    <tr>
                      <th></th>
                      <th>RestrictionName</th>
                      <th>RequirePermission</th>
                      <th>RestrictionDescription</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<form id="mainForm" action="#">
    <div id="mainModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Restriction Details</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">                
                      <input type="hidden" id="RestrictionId" name="RestrictionId">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Tên giới hạn</label>
                        <div class="col-sm-10"><input type="text" id="RestrictionName" name="RestrictionName" placeholder="Tên giới hạn" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Quyền đòi hởi</label>
                        <div class="col-sm-10"><input type="text" id="RequirePermission" name="RequirePermission" placeholder="Quyền đòi hởi" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Mô tả giới hạn</label>
                        <div class="col-sm-10"><input type="text" id="RestrictionDescription" name="RestrictionDescription" placeholder="Mô tả giới hạn" value="" class="form-control"></div>
                    </div>                            
                </div>
                <div class="modal-footer">
                    <button type="button" id="buttonCancel" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn bg-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

	<form id="importForm" enctype="multipart/form-data" method="post">
    <div id="importModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Upload file</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input name="UploadedFile" id="UploadedFile" type="file" class="custom-file-input">
                                <label for="file" class="custom-file-label">Choose file...</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="buttonCancel" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="button" id="upload" class="btn bg-primary">Upload</button>	
                </div>
            </div>
        </div>
    </div>
</form>
	
	
	
