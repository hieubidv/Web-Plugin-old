@model ICreative.Controllers.ViewModels.Datatable.EmployeeTableViewModel
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section plugin_css {
    <link href="~/Content/css/datapicker/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/Plugins/dataTables/datatables.min.css" rel="stylesheet" type="text/css">
    <style>
        .datepicker {
            z-index: 2600 !important; // has to be larger than 1050 
        }
        .modal-dialog{
            max-width: 50%;
        }
    </style>
}

@section plugin_scripts {
    <script src="~/Content/js/plugins/forms/validation/validate.min.js"></script>
    <script src="~/Content/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/Content/js/plugins/tables/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/Content/js/plugins/datapicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/js/plugins/notifications/bootbox.min.js"></script>
    <script src="~/Content/js/Pages/Datatables/EmployeeTable.js"></script>
}

<div class="ibox ">
    <div class="ibox-title">
        <h5>Basic Data Tables example with responsive plugin</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="#" class="dropdown-item">Config option 1</a>
                </li>
                <li>
                    <a href="#" class="dropdown-item">Config option 2</a>
                </li>
            </ul>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <div class="table-responsive">
            <table id="mainTable" class="table table-bordered table-hover datatable-highlight dataTable no-footer" style="width:100%">
                <thead>
                    <tr>
                      <th></th>
                      <th>LastName</th>
                      <th>FirstName</th>
                      <th>Title</th>
                      <th>TitleOfCourtesy</th>
                      <th>BirthDate</th>
                      <th>HireDate</th>
                      <th>Address</th>
                      <th>City</th>
                      <th>Region</th>
                      <th>PostalCode</th>
                      <th>Country</th>
                      <th>HomePhone</th>
                      <th>Extension</th>
                      <th>Photo</th>
                      <th>Notes</th>
                      <th>PhotoPath</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<form id="mainForm" action="#">
    <div id="mainModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Employee Details</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">                
                      <input type="hidden" id="EmployeeID" name="EmployeeID">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Tên</label>
                        <div class="col-sm-10"><input type="text" id="LastName" name="LastName" placeholder="Tên" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Họ</label>
                        <div class="col-sm-10"><input type="text" id="FirstName" name="FirstName" placeholder="Họ" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Tiêu đề</label>
                        <div class="col-sm-10"><input type="text" id="Title" name="Title" placeholder="Tiêu đề" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">TitleOfCourtesy</label>
                        <div class="col-sm-10"><input type="text" id="TitleOfCourtesy" name="TitleOfCourtesy" placeholder="TitleOfCourtesy" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Ngày sinh</label>
                        <div class="col-sm-10"><input type="text" id="BirthDate" name="BirthDate" placeholder="Ngày sinh" value="" class="form-control"></div>
                    </div>                     
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Ngày thuê</label>
                        <div class="col-sm-10"><input type="text" id="HireDate" name="HireDate" placeholder="Ngày thuê" value="" class="form-control"></div>
                    </div>                     
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Địa chỉ</label>
                        <div class="col-sm-10"><input type="text" id="Address" name="Address" placeholder="Địa chỉ" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Thành phố</label>
                        <div class="col-sm-10"><input type="text" id="City" name="City" placeholder="Thành phố" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Vùng</label>
                        <div class="col-sm-10"><input type="text" id="Region" name="Region" placeholder="Vùng" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Mã bưu cục</label>
                        <div class="col-sm-10"><input type="text" id="PostalCode" name="PostalCode" placeholder="Mã bưu cục" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Quốc gia</label>
                        <div class="col-sm-10"><input type="text" id="Country" name="Country" placeholder="Quốc gia" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Điện thoại cố định</label>
                        <div class="col-sm-10"><input type="text" id="HomePhone" name="HomePhone" placeholder="Điện thoại cố định" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Mở rộng</label>
                        <div class="col-sm-10"><input type="text" id="Extension" name="Extension" placeholder="Mở rộng" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ảnh</label>
                        <div class="col-sm-10">
		                    <div class="custom-file">
		                        <input id="Photo" name="Photo" type="file" class="custom-file-input">
		                        <label for="logo" class="custom-file-label">Choose file...</label>
		                    </div> 
                        </div>
                    </div>                            	                            	
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Notes</label>
                        <div class="col-sm-10"><input type="text" id="Notes" name="Notes" placeholder="Notes" value="" class="form-control"></div>
                    </div>                            
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Thông báo tới</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="EmployeeReferenceEmployeeID" name="EmployeeReferenceEmployeeID">
                                @foreach (SelectListItem item in Model.Employees)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Đường dẫn ảnh</label>
                        <div class="col-sm-10"><input type="text" id="PhotoPath" name="PhotoPath" placeholder="Đường dẫn ảnh" value="" class="form-control"></div>
                    </div>                            
                </div>
                <div class="modal-footer">
                    <button type="button" id="buttonCancel" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn bg-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

	<form id="importForm" enctype="multipart/form-data" method="post">
    <div id="importModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Upload file</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input name="UploadedFile" id="UploadedFile" type="file" class="custom-file-input">
                                <label for="file" class="custom-file-label">Choose file...</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="buttonCancel" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="button" id="upload" class="btn bg-primary">Upload</button>	
                </div>
            </div>
        </div>
    </div>
</form>
	
	
	
